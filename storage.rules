rules_version = '2';

// ðŸ”’ RÃ¨gles Firebase Storage pour NextMate
service firebase.storage {
  match /b/{bucket}/o {
    // ðŸ“¸ RÃ¨gles pour les images utilisateurs
    match /users/{userId}/{allPaths=**} {
      // âœ… Permettre lecture Ã  tous (pour voir les avatars)
      allow read: if true;
      
      // âœ… Permettre Ã©criture seulement au propriÃ©taire authentifiÃ©
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && resource == null || resource.size < 5 * 1024 * 1024; // Max 5MB
    }
    
    // ðŸš« Bloquer tout le reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 